<div class="container">
    <div class="row">
        <div class="col s12">
            <h4 class="header">New Player form</h4>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="alert alert-success" role="alert" id="user-creation-alert" style="display:none">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <form id="new-player-form" class="col s12">
                <div class="input-field">
                    <input placeholder="" id="player_name" type="text" class="validate">
                    <label for="player_name">Player Name</label>
                </div>


                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input id="ustaId" type="number" class="validate">
                        <label for="ustaId">USTA Number</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="utrRating" type="number" class="validate">
                        <label for="utrRating">UTR Rating</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <select>
                            <option value="" disabled selected>Choose your option</option>
                            <option value="1">Beginner</option>
                            <option value="2">Intermediate</option>
                            <option value="3">Advanced</option>
                        </select>
                        <label>Player Level</label>
                    </div>

                </div>
                <button class="btn waves-effect waves-light btn-small" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>
    </div>
</div>

